{
  "name": "kusama-transfers",
  "private": true,
  "engines": {
    "node": ">=16"
  },
  "scripts": {
    "build": "rm -rf lib && tsc",
    "db:migrate": "npx squid-typeorm-migration apply",
    "db:reset": ". ./scripts/reset-db.sh",
    "db:soft-reset": ". ./scripts/soft-reset-db.sh",
    "processor:start": "node lib/processor.js",
    "query-node:start": "squid-graphql-server --subscriptions --max-response-size 10000 --dumb-cache in-memory --dumb-cache-ttl 1000 --dumb-cache-size 100 --dumb-cache-max-age 1000"
  },
  "dependencies": {
    "@subsquid/archive-registry": "1.0.18",
    "@subsquid/graphql-server": "3.3.2",
    "@subsquid/processor-tools": "github:subsquid/typeorm-cache-store",
    "@subsquid/ss58": "0.1.4",
    "@subsquid/substrate-processor": "^2.0.0",
    "@subsquid/typeorm-migration": "0.1.6",
    "@subsquid/typeorm-store": "0.2.2",
    "concurrently": "^7.5.0",
    "dotenv": "^10.0.0",
    "node-ipc": "^11.1.0",
    "pg": "8.8.0",
    "typeorm": "0.3.9",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "@subsquid/substrate-metadata-explorer": "1.1.2",
    "@subsquid/substrate-typegen": "1.5.1",
    "@subsquid/typeorm-codegen": "0.3.3",
    "@types/node": "16.11.56",
    "@types/node-ipc": "^9.2.0",
    "@types/uuid": "^8.3.4",
    "prettier": "^2.7.1",
    "typescript": "4.8.2"
  }
}
